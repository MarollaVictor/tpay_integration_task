@{
    ViewData["Title"] = "TPAY Integration Task";
}

<div class="container text-center mt-5">
    <h1 class="mb-4">TPAY Subscription Demo</h1>

    <p>Enter your mobile number and choose your operator to start subscription:</p>

    <form id="subscribeForm" class="mt-3">
        <div class="form-group mb-3">
            <input type="text" id="msisdn" class="form-control" placeholder="Enter mobile number" required />
        </div>

        <div class="form-group mb-3">
            <select id="operator" class="form-control">
                <option value="">-- Select Operator --</option>
                <option value="60201">Orange</option>
                <option value="60202">Vodafone</option>
            </select>
        </div>

        <button type="button" id="subscribeBtn" class="btn btn-primary w-50">Subscribe</button>
    </form>

    <div id="message" class="mt-4"></div>
    <div id="loading" class="mt-4 d-none">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p>Processing subscription...</p>
    </div>
</div>

<script src="~/js/site.js"></script>